<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clayCategoria"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <com.sinaseyfi.advancedcardview.AdvancedCardView
        android:id="@+id/acvCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:background_Alpha="1.0"
        app:background_Color="@color/blanco"
        app:background_ColorType="solid"
        app:background_Type="fill"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shadow0_Outer_Blur="10dp"
        app:shadow0_Outer_Color="@color/sombra"
        app:shadow_Outer_Area="10dp"
        app:shadow0_Outer_Alpha="0.5" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="8dp">

            <ImageView
                android:id="@+id/ivCategoria"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:tint="@color/iconos"
                android:transitionName="ivCategoria" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:paddingHorizontal="15dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/azul"
                android:transitionName="tvNombreCategoria" />

        </LinearLayout>

    </com.sinaseyfi.advancedcardview.AdvancedCardView>

    <com.sinaseyfi.advancedcardview.AdvancedCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:background_Color="@color/turquesa"
        app:background_ColorType="solid"
        app:cornerRadius_BottomLeft="25dp"
        app:cornerRadius_TopLeft="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:paddingEnd="20dp"
            android:src="@drawable/ic_derecha"
            android:tint="@color/blanco" />

    </com.sinaseyfi.advancedcardview.AdvancedCardView>

</androidx.constraintlayout.widget.ConstraintLayout>