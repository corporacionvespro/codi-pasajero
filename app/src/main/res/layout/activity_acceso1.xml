<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:fitsSystemWindows="true"
    android:theme="@style/Material" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="50dp">

            <ImageView
                android:id="@+id/ivIsotipo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/isotipo_pasajero"
                android:transitionName="ivIsotipo" />

            <com.sinaseyfi.advancedcardview.AdvancedCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                style="@style/cardSombra" >

                <Button
                    android:id="@+id/btnNuevoUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Soy un nuevo usuario"
                    style="@style/botonAzul" />

            </com.sinaseyfi.advancedcardview.AdvancedCardView>

            <com.sinaseyfi.advancedcardview.AdvancedCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                style="@style/cardSombra" >

                <Button
                    android:id="@+id/btnTengoCuenta"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Ya estoy registrado"
                    style="@style/botonTurquesa" />

            </com.sinaseyfi.advancedcardview.AdvancedCardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
