<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/tesla"
            android:scaleType="fitXY"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Su unidad\nha llegado"
            android:fontFamily="@font/corsa_regular"
            android:textStyle="bold"
            android:textColor="@color/azul"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:lineHeight="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disfrute su viaje con\nCodi Drive."
            android:fontFamily="@font/corsa_thin"
            android:textStyle="bold"
            android:textColor="@color/gris"
            android:textAlignment="center"
            android:textSize="20sp"
            android:lineHeight="23sp"
            android:layout_marginBottom="30dp" />

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Aceptar"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            style="@style/botonTurquesa" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>