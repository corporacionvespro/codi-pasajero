<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.sinaseyfi.advancedcardview.AdvancedCardView
        android:id="@+id/acvHistorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/cardSombra" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" >

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/gris"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textAlignment="center"
                    android:textColor="@color/azul"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="55dp" >

                <ImageView
                    android:id="@+id/ivPerfilConductor"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:transitionName="ivFotoConductor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Conductor"
                        android:textAlignment="textStart"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/gris"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvNombresConductor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/azul"
                        android:textSize="15sp"
                        android:textAlignment="textStart"
                        android:singleLine="true"
                        android:transitionName="tvNombresConductor" />

                    <TextView
                        android:id="@+id/tvApellidosConductor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/azul"
                        android:textSize="15sp"
                        android:textAlignment="textStart"
                        android:singleLine="true"
                        android:transitionName="tvApellidosConductor" />

                    <RatingBar
                        android:id="@+id/rbValoracion"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:numStars="5"
                        android:stepSize="1"
                        android:isIndicator="true"
                        android:transitionName="rbValoracion"
                        style="@style/ImageRatingBar" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="bottom|end"
                android:layout_gravity="end"
                android:layout_marginTop="-10dp" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_mas"
                    android:tint="@color/blanco"
                    android:background="@drawable/redondo_gris"
                    android:padding="5dp" />

            </LinearLayout>

        </LinearLayout>

    </com.sinaseyfi.advancedcardview.AdvancedCardView>

    <com.sinaseyfi.advancedcardview.AdvancedCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:background_Color="@color/turquesa"
        app:background_ColorType="solid"
        app:cornerRadius_BottomLeft="25dp"
        app:cornerRadius_TopLeft="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center" >

            <TextView
                android:id="@+id/tvPagoFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/blanco"
                android:textSize="12sp"
                android:transitionName="tvPagoFinal" />

        </LinearLayout>

    </com.sinaseyfi.advancedcardview.AdvancedCardView>

</androidx.constraintlayout.widget.ConstraintLayout>